<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab idMso="TabHome" >
        <group id="Content"
               label="Irit2Powerpoint">
          <button id="ImportButton"
                  label="Import"
                  screentip="Import Model"
                  supertip="Import a 3D model and insert it into the slide"    
                  onAction="OnImportButton"/>

          <button id="ImportSettingsButton"
                  label="Import Settings"
                  screentip="Import Settings"
                  supertip="Specify the import settings."           
                  onAction="OnSettingsButton"/>

          <button id="RenderSettingsButton"
                  label="Render Settings"
                  screentip="Render Settings"
                  supertip="Specify the render settings for the currently loaded model"
                  onAction="OnRenderButton"
                  getEnabled="OnGetRenderEnabled"/>

        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

